<Window x:Class="TranNgocKhietWPF.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranNgocKhietWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="UserWindow" 
        Width="950"
        Height="900">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Frame x:Name="frMain" 
               VerticalAlignment="Stretch" 
               Grid.Row="0"
               Grid.RowSpan="13"
               Grid.Column="0"
               Grid.ColumnSpan="18"
               NavigationUIVisibility="Hidden"/>

        <Button Content="Room List"
                Height="30"
                Width="150"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Grid.Row="14"
                HorizontalAlignment="Left"
                Click="ViewRoomListButtonClick"/>

        <Button Content="Booking Reservation History" 
                Name="ToBookingReservationHistoryPageButton" 
                Click="ToBookingReservationHistoryPageButton_Click" 
                HorizontalAlignment="Left"
                Height="30" 
                Width="150"
                Grid.Column="8"
                Grid.Row="14"
                Grid.ColumnSpan="4"/>


        <Button Content="Edit Profile"
                Name="ToEditProfiletPageButton" 
                Click="ToEditProfiletPageButton_Click" 
                HorizontalAlignment="Right"
                Height="30" 
                Width="150"
                Grid.Column="13"
                Grid.Row="14"
                Grid.ColumnSpan="4"/>
        
        <Button Content="Log Out"
                HorizontalAlignment="Right"
                Height="30" 
                Width="150"
                Grid.Column="13"
                Grid.Row="15"
                Grid.ColumnSpan="4"
                Click="LogoutButton_Click"/>
    </Grid>
</Window>
